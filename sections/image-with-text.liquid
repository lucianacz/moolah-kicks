        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "t:sections.image_with_text.settings.text_alignment.options__1"
          },
          {
            "value": "center",
            "label": "t:sections.image_with_text.settings.text_alignment.options__2"
          }
        ]
      },
      {
        "type": "header",
        "content": "Customize text box"
      },
      {
        "type": "checkbox",
        "id": "shadow_text",
        "label": "Shadow text",
        "default": false
