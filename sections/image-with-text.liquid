      {
        "type": "color",
        "id": "background_text",
        "label": "Background",
        "default": "#F2693A"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_shadow",
        "label": "Shadow",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "checkbox",
        "id": "show_background_section",
        "label": "Show background section",
        "default": false
